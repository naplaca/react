{
  "extends": "@naplaca/tsconfig/tsconfig.react.json",
  "include": ["**/*.ts", "**/*.tsx", "eslint.config.js", "vite.config.js"],
  "compilerOptions": {
    "rootDir": "./",
    "types": ["vite/client"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    }
  }
}
